<%- include("partial/header") %>
<%- include("partial/navbar") %>

<%if(locals.post) {%>
    <form class="edit-post-container" action="/post/edit" method="POST">
        <h1>What do you want to share?</h1>
        <input type="hidden" name="postid" value="<%=post.postid%>">
        <input class="edit-post edit-title" type="text" name="title" value="<%=post.title%>">
        <textarea class="edit-post edit-content" rows="15" cols="10" name="content"><%=post.content%></textarea>
        <button class="edit-post edit-submit"type="submit">Submit</button>
    </form>
<%} else {%>
    <form class="edit-post-container" action="/post/add" method="POST">
        <h1>What do you want to share?</h1>
        <input class="edit-post edit-title" type="text" name="title" placeholder="Enter a title">
        <textarea class="edit-post edit-content" rows="15" cols="10" name="content" placeholder="Type what you want to share"></textarea>
        <button class="edit-post edit-submit"type="submit">Submit</button>
    </form>
<%}%>
<%- include("partial/footer") %>
